---
export interface Props {
	title: string;
	body?: string;
	href: string;
	tipPrefix: string;
}

const { href, title, body, tipPrefix } = Astro.props;
const shortMode = !body;
---

<li 
  title={`Select to open my ${tipPrefix} in a new tab.`}
  class={`group bg-slate m-0 p-0 hover:ring-1 rounded-md hover:ring-blue-400 ${shortMode ? 'row-span-1' : 'row-span-2'}`}
  >
	<a href={href} target="_blank" class="grid h-full">
	  <div class="block relative mt-4 ml-4 mb-4 h-full">
			<svg class="absolute -top-2 right-6 origin-center group-hover:motion-safe:animate-shake-once" width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M2 19V5C2 3.89543 2.89543 3 4 3H20C21.1046 3 22 3.89543 22 5V19C22 20.1046 21.1046 21 20 21H4C2.89543 21 2 20.1046 2 19Z" stroke="currentColor" /> <path d="M2 7L22 7" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/> <path d="M9 14H12M15 14H12M12 14V11M12 14V17" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/> </svg>
			<h2 class="w-fit group-hover:text-blue-400">
				{title}
				<span>&rarr;</span>
			</h2>
			{body && <p class="w-11/12">{body}</p>}
		</div>
	</a>
</li>
